<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rit.se.treasurehuntvuz">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".TreasureHuntVuzApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FindTreasureActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".ShowTreasureActivity" />
        <activity android:name=".EnterHighscoreActivity" />
        <activity android:name=".StartGameActivity" />
        <activity android:name=".ShowFilesActivity" />
        <activity android:name=".ShowHighscoreActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".SaveGameActivity" />
    </application>

</manifest>
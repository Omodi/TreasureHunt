<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_findtreasure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rit.se.treasurehuntvuz.FindTreasureActivity">

    <ImageView
        android:id="@+id/player_distant_hints_image_view"
        android:layout_width="228dp"
        android:layout_height="168dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/player_bearing_hints_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_distant_hints_image_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/player_coin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_bearing_hints_text_view"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
